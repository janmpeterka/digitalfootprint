<div>
<ul class="navbar-vertical">
	<li><span>Přehled</span></li>
	<li>
		{% if not with_solution %}
		<span class='tab-link' data-tab-name="info" data-action='click->tab-switcher#activate' data-active=true>Info</span>
		{% else %}
		<span class='tab-link' data-tab-name="info" data-action='click->tab-switcher#activate' data-active=false>Info</span>
		{% endif %}
	</li>
	<hr>
	<li><span>Zdroje dat</span></li>
	{% for source in mission.data_sources %}
	<li>
		<span class='tab-link' data-tab-name="data_{{source.name}}" data-action='click->tab-switcher#activate' data-active=false >{{ source.public_name|capitalize }}</span>
	</li>	
	{% endfor %}
	<hr>
	<li><span>Aktivity</span></li>
	{% for action in mission.actions %}
	<li>
		<span class='tab-link' data-tab-name="action_{{action.name}}" data-action='click->tab-switcher#activate' data-active=false>{{ action.public_name|capitalize }}</span>
	</li>
	{% if with_solution %}
	<li><span>Řešení</span></li>
	<li>
		<span class='tab-link' data-tab-name="solution" data-action='click->tab-switcher#activate' data-active=true>Řešení</span>
	</li>
	{% endif %}
	{% endfor %}
</ul>
</div>